{{#if editQuestionForm}}
<h4>Edit {{question.author}}'s</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="query">Question</label>
        {{input value=query id="query" placeholder=question.query}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <button {{action 'edit' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestionForm'}}>Edit</button>
{{/if}}
